<?xml version="1.0"?>
<!DOCTYPE overlay [
<!ENTITY % custombuttonsDTD SYSTEM "chrome://custombuttons/locale/custombuttons.dtd" >
%custombuttonsDTD;
]>
<overlay id="custombuttonsAboutOverlay"
		 xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	
	<script type="application/x-javascript">
		<![CDATA[
			function custombuttonsAddSupportInfo (event)
			{
				window. removeEventListener ("load", custombuttonsAddSupportInfo, false);
				var extName = document. getElementById ("extensionName"). getAttribute ("value");
				var sul = document. getElementById ("supportPageURL");
				if (sul)
				{
					if (extName == "Custom Buttons")
					{
						sul. parentNode. appendChild (sul);
						sul. removeAttribute ("hidden");
						window. sizeToContent ();
					}
					else
					{
						sul. parentNode. removeChild (sul);
					}
				}
			}
			window. addEventListener ("load", custombuttonsAddSupportInfo, false);
		]]>
	</script>

	<vbox id="developersBox">
		<label id="supportPageURL"
			   class="text-link contributor"
			   homepageURL="http://custombuttons.mozdev.org/drupal/forum"
			   onclick="loadHomepage(event);"
			   tooltiptext="http://custombuttons.mozdev.org/drupal/forum"
			   value="&custombuttons.about.supportPageURL;"/>
	</vbox>

</overlay>
